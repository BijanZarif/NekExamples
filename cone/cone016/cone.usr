c-----------------------------------------------------------------------
      subroutine useric (ix,iy,iz,iel)
      include 'SIZE'
      include 'TSTEP'
c     include 'TOTAL'
      include 'NEKUSE'
c
c     Convection of cone on [0,1] x [0,1]  box
c
c
      xx = x-0.5
      yy = y-0.5
c
c     Convecting field
c
      ux = -yy
      uy =  xx
      uz=0.0
c
c
c     Cone
c
      temp = 0.
      xc = 0.5
      yc = 0.25
      xt = x - xc
      yt = y - yc
      r2 = xt*xt + yt*yt
      rt = 0.
      if (r2.gt.0) rt = sqrt(r2)
      if (rt.lt.0.1) temp = 10.*(0.1 - rt)
c
      return
      end
c
